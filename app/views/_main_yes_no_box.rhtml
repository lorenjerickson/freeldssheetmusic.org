<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en">
<head>
	<title><%=
		if @title then
			h @title
		else
			h 'Songs'
		end
		-%> : <%=h @store_name %></title>
	<%= javascript_include_tag :defaults, :cache => 'default' %>
  <%= 
    javascript_include_tag(
      'substruct', 'subModal', 'lightbox', 
      :plugin => 'substruct', 
      :cache => 'substruct_cache'
    ) 
  %>
  <%= 
    stylesheet_link_tag(
      'subModal', 'lightbox',
      :plugin => 'substruct', 
      :cache => 'substruct_main'
    ) 
  %>
  <%=
    stylesheet_link_tag('main')
  %>
	<%= yield :header %>

<!-- google analytics -->
<script type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-4531218-4']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

</script>

</head>
<body>

<!-- Begin Container -->
<div id="container">
	<div id="header">
		
		<!-- top links -->
		<ul class="navigation" id="toplinks" style="width: 375px;">
      <!--li style="margin-right:0px;">
				<a href="/store/show_cart" class="submodal-600-400">Cart</a>
			</li-->
			<!--li><a href="/customers/wishlist">Download Queue</a></li-->
			<li><a href="/questions/ask">Contact Us</a></li>
      <li><a href="/upload">Publish/list your own works with us</a></li>
      <!--li><a href="/customers/orders">Track an Order</a></li-->
		</ul>
		
		<!-- logo -->
		<div style="float:left; padding-top: 15px;">
                 <%# :size => '450x100' musicbannervsmall2.jpg
                  %>
			<a href="/"><%= image_tag('musicbannervsmall.jpg', :alt => 'Music for Mormons Free LDS Sheet Music', :width => 450, :height => 110) %></a>
		</div>
		
		<% if @customer && !@customer.new_record? %>
			<div id="customer_msg">
				<%= @customer.email_address %>
				<br/>
				<a href="/customers/logout">log out</a>
			</div>
		<% end %>
		
		<!-- search box -->
		<div id="searchbox">
			<form action="/music/search" method="get">
				<input type="image" src="/plugin_assets/substruct/images/public-ui/buttons/search.gif" style="float:right;" />
				<input type="text" name="search_term" class="textInput big" style="float:right; margin-right: 5px;" />
			</form>
                        <div style="float: right; margin-top: 10px; margin-right: 60px;">
                            <a href="/music/advanced_search">Advanced search</a><span style="color: grey; font-size: 9px;">&nbsp;&nbsp;&nbsp; topic with voicing, etc...</span>
                       </div>
		</div>
		
		<div class="clear"></div> <!-- necessary... -->

		<!-- big navigation bar -->
		<div id="navigation">
			<div id="navcap_left"></div>
			<div id="navcap_right"></div>
			<div id="navigation-inner">
				<ul class="navigation">
					<!--li class="<%= @cname == 'main' ? 'active' : '' %>"><a href="/">Home</a></li-->
					<li class="<%= (@cname == 'music' && @aname == 'index') ? 'active' : '' %>"><a href="/music">All</a></li>
					<% 
						@main_nav_tags.each_index do |i| 
							tag = @main_nav_tags[i]
					%>
						<li
						 	class="<%= is_main_tab_active?(tag.id) ? 'active' : '' %>"
							style="<%= i == @main_nav_tags.size-1 ? 'margin-right: 0px !important;' : '' %>"
						>
							<%= 
								link_to(
									tag.name,
									:controller => 'music',
									:action => 'show_by_tags',
									:tags => [tag.name]
								)
							%>
						</li>
					<% end %>
				</ul>
				<div class="clear"></div>
			</div>
		</div>
		
		<% if @show_subnav && @subnav_tags.length > 0%>
			<div id="subnavigation">
				<ul class="navigation">
                                        <li><a href="">Sub-categories:</a></li>
					<% for tag in @subnav_tags do; next if tag.products.length == 0 %>
						<li class="<%= is_main_tab_active?(tag.id) ? 'active' : '' %>">
							<%= 
								link_to(
									tag.name,
									:controller => 'music',
									:action => 'show_by_tags',
									:tags => [tag.name]
								)
							%>
						</li>
					<% end %>
				</ul>
			</div>
		<% end %>
	</div> <!-- End header -->

	<!-- Begin content body  -->
	<div id="contentBody">
          <%= render :partial => '/shared/flash', :locals => { :flash => flash } %>
          <%= yes_box ? (render :partial => '/boxed_categories') : "" %>
	  <%= yield %>
	</div>
	<div class="clear"></div>
	<!-- End content body -->

	<div id="footer">
		<ul class="navigation">
			<li style="margin-left: 75px;"><a href="/">Home</a></li>
                        <li><a href="/about">About Us</a></li>
			<!--li><a href="/questions/faq">FAQ</a></li-->
			<li><a href="/questions/ask">Feedback</a></li>
			<!--li><a href="/blog">Blog</a></li-->
			<!--li><a href="/customers/wishlist">Download Queue</a></li-->
                        <li><a href="/upload">Add your works</a></li>
                        <li><a href="/all-resources">Resources/Other Music</a></li>
                        <!--li><a href="/store/show_cart" class="submodal-600-400">Cart</a></li-->
		</ul>
    <br/>

    <div style="margin-top: 5px; font-size: .75em; text-align: center; color: gray">See <a href="http://mormon.org">mormon.org</a> for the official LDS church site.  Each piece is &copy; its respective composer.<br/> Total views from the site: <%= Product.sum(:view_count) %></div>

<%#count = 0; Download.all.each{|dl| count += dl.count if dl.name =~ /pdf/}; count 
%>
  </div> <!-- end footer -->
<br/>
	
</div>

</body>
</html>
