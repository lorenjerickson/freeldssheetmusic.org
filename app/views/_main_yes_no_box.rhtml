<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en">
<head>
<link rel="icon" 
      type="image/gif" 
      href="/images/play_button.gif" />
	<title><%=
		if @title then
                   @title = @title + ' - ' + @store_name + ''
		else
                   @title = @store_name
		end
                 "&#9834" + h(@title)
		-%></title>
	<%= javascript_include_tag :defaults, :cache => 'default' %>

  <%= 
    javascript_include_tag(
      'substruct', 'subModal', 'lightbox', 
      :plugin => 'substruct', 
      :cache => 'substruct_cache'
    ) 
  %>
  <%= 
    stylesheet_link_tag(
      'subModal', 'lightbox',
      :plugin => 'substruct', 
      :cache => 'substruct_main'
    ) 
  %>
  <%=
    stylesheet_link_tag('main')
  %>
	<%= yield :header %>
<% unless session[:user] %>
<!-- google analytics -->
<script type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-4531218-4']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

</script>

<% end %>

</head>
<body background="/images/trebs/trebs235.gif">

<!-- Begin Container -->
<div id="container" style="background-color: white;">
	<div id="header" style="background-image:url('/images/trebs/trebs240.gif');">
		
		<!-- top links -->
		<ul class="navigation" id="toplinks" style="width: 385px;">
                        <!--li style="margin-right:0px;"> <a href="/store/show_cart" class="submodal-600-400">Cart</a> </li-->
			<!--li><a href="/customers/wishlist">Download Queue</a></li-->
			<!--li><a href="/questions/ask">Contact Us</a></li-->
                        <!--li><%=link_to 'Publish/list your own works with us', :controller => 'content_nodes', :action => 'show_by_name', :name => 'upload' %></li-->
		</ul>
		
		<!-- logo -->
		<div style="float:left; padding-top: 15px; padding-left: 5px;">
		   <a href="/"><%= image_tag('musicbannervsmall.jpg', :alt => @title, :height => 85) %></a>
		</div>
		
		<% if @customer && !@customer.new_record? %>
			<div id="customer_msg">
				<%= @customer.email_address %>
				<br/>
				<a href="/customers/logout">log out</a>
			</div>
		<% end %>
		
		<!-- search box -->
		<div id="searchbox" style="width: 350px; margin-top: 10px;">
			<form action="/music/search" method="get">
				<input type="submit" value="" style="border: solid 0px #000000; background-image: url(/plugin_assets/substruct/images/public-ui/buttons/search.gif); float: right; width: 80px; height: 40px;"/> <!-- avoid x and y get params -->
				<input type="text" name="search_term" class="textInput big" value="<%= session.delete(:last_search) %>" style="float:right; margin-right: 5px;" />
			</form>
                        <div style="float: right; margin-top: 15px; margin-right: 60px;">
                            <a href="/music/advanced_search">Advanced search</a><span style="color: grey; font-size: 9px;">&nbsp;&nbsp;&nbsp; topic with specific voicing, etc...</span>
                       </div>
		</div>
		
		<div class="clear"></div> <!-- necessary... -->

		<!-- big navigation bar -->
		<div id="navigation">
			<div id="navcap_left"></div>
			<div id="navcap_right"></div>
			<div id="navigation-inner">
				<ul class="navigation">
					<!--li class="<%= @cname == 'main' ? 'active' : '' %>"><a href="/">Home</a></li-->
					<li class="<%= (@cname == 'music' && @aname == 'show_by_tags' && controller.params[:tags] == ['all']) ? 'active' : '' %>"><a href="/all">All</a></li>
					<% 
						@main_nav_tags.each_index do |i| 
							tag = @main_nav_tags[i]
					%>
						<li
						 	class="<%= is_main_tab_active?(tag.id) ? 'active' : '' %>"
							style="<%= i == @main_nav_tags.size-1 ? 'margin-right: 0px !important;' : '' %>"
						>
							<%= tag_link(tag) %>
						</li>
					<% end %>
				</ul>
				<div class="clear"></div>
			</div>
		</div>
		
		<% if @show_subnav && @subnav_tags.length > 0%>
			<div id="subnavigation">
				<ul class="navigation">
                                        <li><a href="">Sub-categories:</a></li>
					<% for tag in @subnav_tags do; next if tag.products.length == 0 %>
						<li class="<%= is_main_tab_active?(tag.id) ? 'active' : '' %>">
							<%= tag_link(tag) %>
						</li>
					<% end %>
				</ul>
			</div>
		<% end %>
	</div> <!-- End header -->

	<!-- Begin content body  -->
	<div id="contentBody">
          <%= render :partial => '/shared/flash', :locals => { :flash => flash } %>
          <% if yes_box %>
              <%= 
               # bwokded for now Cache.get_or_set_int([Time.now.wday, @viewing_tags.andand.map(&:id)].hash, 'boxed', 'tags') {
                 render :partial => '/boxed_categories' 
               #}
               %>
          <% end %>
	  <%= yield %>
	</div><!-- End content body -->
	<div class="clear"></div>

	<div id="footer" style="background-image:url('/images/trebs/trebs240.gif');">
		<ul class="navigation">
			<li style="margin-left: 75px;"><a href="/">Home</a></li>
                        <li><%=link_to 'About Us', :controller => 'content_nodes', :action => 'show_by_name', :name => 'about' %></li>
			<!--li><a href="/questions/faq">FAQ</a></li-->
			<li><a href="/questions/ask">Contact Us</a></li>
			<!--li><a href="/customers/wishlist">Download Queue</a></li-->
                        <li><%=link_to 'Publish/list your own works with us', :controller => 'content_nodes', :action => 'show_by_name', :name => 'upload' %></li>
                        <li><%=link_to 'Resources/Other Music', :controller => 'content_nodes', :action => 'show_by_name', :name => 'all-resources'%></li>
                        <li><a href="https://github.com/rdp/freeldssheetmusic.org/wiki/list-of-pay-songs">Pay songs</a></li>
                        <% if session[:user] %>
                           <!--li><a href="/admin">Admin</a></li-->
                        <% end %>
                        <!--li><a href="/store/show_cart" class="submodal-600-400">Cart</a></li-->

		</ul>
         <br/>

          <div style="margin-top: 5px; font-size: .75em; text-align: center; color: gray">See <a href="http://mormon.org">mormon.org</a> for the official LDS church site.  Each piece (or recording) is &copy; its respective composer. Total song count: <%= Product.count %>.
          </div>

        </div> <!-- end footer -->
	
</div> <!-- end container -->

</body>
</html>
